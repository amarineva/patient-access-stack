{
  "name": "scriptability-mcp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Model Context Protocol server exposing ScriptAbility APIs as tools.",
  "bin": {
    "scriptability-mcp": "./index.js"
  },
