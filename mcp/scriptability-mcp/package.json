    "test:client": "node ./test-client.js"
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.19.1",
    "undici": "^6.19.8",
    "mime-types": "^2.1.35",
    "express": "^4.19.2",
    "cors": "^2.8.5"
  }
}
