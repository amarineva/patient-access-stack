{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/*.md",
      ".env"
    ],
    "rewrites": [
      {
        "source": "/mcp",
        "function": "mcpProxy"
      },
      {
        "source": "/mcp/**",
        "function": "mcpProxy"
      },
      {
        "source": "/getMcpState",
        "function": "getMcpState"
      },
      {
        "source": "/toggleMcpState",
        "function": "toggleMcpState"
      },
      {
        "source": "/upload/image",
        "run": {
          "serviceId": "scriptability-mcp",
          "region": "us-central1"
        }
      },
      {
        "source": "/upload/image/multipart",
        "run": {
          "serviceId": "scriptability-mcp",
          "region": "us-central1"
        }
      },
      {
        "source": "/files/medcast/**",
        "run": {
          "serviceId": "scriptability-mcp",
          "region": "us-central1"
        }
      }
    ],
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|svg|webp|ico)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=7200"
          }
        ]
      },
      {
        "source": "**/*.@(css|js)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=3600"
          }
        ]
      }
    ]
  }
  ,
  "firestore": {
    "rules": "firestore.rules"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5000
    },
    "firestore": {
      "port": 8080
    },
    "ui": {
      "enabled": true
    }
  }
}
